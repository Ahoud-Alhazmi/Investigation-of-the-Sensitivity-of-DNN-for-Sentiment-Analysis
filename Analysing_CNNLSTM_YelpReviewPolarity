#----------------------------------
def convertlistToWords (sample):
    # for Head
    words = sample.split()
    LSitsample = []
    j =0
    while j <= len(words):
        stest = " ".join(words[:j])
        #print ("tokesn: ", stest)
        LSitsample.append(stest)
        j = j + 1
        
    return LSitsample

#-----------------------------------
def Head2 (listpredication ):
    Attrbuition = []
    k = 1
    while k < len(listpredication):
        num = listpredication[k] - listpredication[k-1]
        Attrbuition.append(num)
        k = k + 1
    #print("Attrbuition ", len(Attrbuition))
    #print(Attrbuition)
    return Attrbuition

#-------------------------

def convertlistTowordsTails (sample):
    words = sample.split()
    LSitsample = []
    j =0
    while j <= len(words):
        stest = " ".join(words[j:])
        #print ("tokesn: ", stest)
        LSitsample.append(stest)
        j = j + 1
        
    return LSitsample

#----------------------------

def Tail (listpredication ):
    Attrbuition = []
    k = 1
    while k < len(listpredication):
        num = listpredication[k] - listpredication[k-1]
        Attrbuition.append(num)
        k = k + 1
    #print("Attrbuition ", len(Attrbuition))
    #print(Attrbuition)
    return Attrbuition

#-------------------------
def combined(attHead , atttail):
    Attrbuition = []
    num = min(len(attHead), len(atttail))
    l =0
    while l < num:
        re =attHead[l]-(30*atttail[l])
        Attrbuition.append(re)
        l = l +1
    return Attrbuition
        
        
