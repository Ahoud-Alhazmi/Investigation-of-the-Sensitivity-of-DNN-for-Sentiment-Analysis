#================================================== Misspelling Attack:  ===============================================================
#------------------------------------------------------------------------------------------------------------------------------------

def shuffle33( TryWord):
    wordlen = len(TryWord)
    TryWord = list(TryWord)
    for i in range(0,wordlen -1 ):
        pos = randint(i +1 , wordlen-1)
        TryWord[i],TryWord[pos] = TryWord[pos],TryWord[i]
    TryWord = "".join(TryWord)
    return TryWord


